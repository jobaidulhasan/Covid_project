<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeferenceConutryInformation">
    <LinearLayout
        android:background="#121212"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="13.4"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:background="?android:attr/windowBackground"
            android:id="@+id/toolvarid"
            style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <androidx.cardview.widget.CardView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:cardElevation="8dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#FD121723"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:weightSum="5"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_height="match_parent">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:id="@+id/details_img"
                    android:src="@drawable/afganistan"
                    />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/detail_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bangldesh"
                        android:textSize="23sp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textColor="#ffff"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <GridLayout
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            >

            <!-- End Top Design-->
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#FD121723"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Confirmed"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#D5D2D2"
                        />

                    <TextView
                        android:id="@+id/details_total_cases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#FAF6F6"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--End Row Tow Design-->
            <androidx.cardview.widget.CardView

                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FD121723">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Deaths"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#CBF44336"
                        />
                    <TextView
                        android:id="@+id/detail_Total_death"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#F61504"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--End Tree Collu-->
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#FD121723"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Recovered"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#0FCDBC"
                        />

                    <TextView
                        android:id="@+id/detail_total_recoverd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#009688"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--End Row Tow Design-->
            <androidx.cardview.widget.CardView

                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FD121723">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Active"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#EF5F90"
                        />
                    <TextView
                        android:id="@+id/details_total_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading.."
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#E91E63"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/layout_style"
                android:layout_margin="10dp"
                android:layout_weight="3">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollX="10dp"
                android:scrollbarSize="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:weightSum="5"
                    android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#BA22302E" >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today Death"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:textColor="#D5D2D2"
                            />

                        <TextView
                            android:id="@+id/detail_today_death"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Loading.."
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="#FAF6F6"
                            />
                    </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#D01A2832">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today Confirmed"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="#D5D2D2"
                        />

                    <TextView
                        android:id="@+id/detail_today_cases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Loading.."
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="#FAF6F6"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#BA22302E">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cretical Cases"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="#D5D2D2"
                        />

                    <TextView
                        android:id="@+id/detail_cretecel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Loading.."
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="#FAF6F6"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#D01A2832" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CasesperOneMilion"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="#D5D2D2"
                        />

                    <TextView
                        android:id="@+id/detail_casesOnperMilion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Loading.."
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="#FAF6F6"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#BA22302E" >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DeathperOneMilion"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:textColor="#D5D2D2"
                                />

                            <TextView
                                android:id="@+id/detail_deathOnperMilion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Loading.."
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:textColor="#FAF6F6"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#D01A2832" >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Test"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:textColor="#D5D2D2"
                                />

                            <TextView
                                android:id="@+id/detail_total_test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Loading.."
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:textColor="#FAF6F6"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
             </HorizontalScrollView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.1"
                app:cardBackgroundColor="#FD121723"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:id="@+id/lastUpdate"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Last Update\nMon 23-2-2001 at 2.00.59"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        <com.google.android.gms.ads.AdView
            android:layout_marginTop="5dp"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:layout_marginBottom="2dp"
            ads:adUnitId="ca-app-pub-4854312329985830/9769847220"

            >

        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</FrameLayout>